{
  "version": 8,
  "name": "Espresso Protomaps (Vector)",
  "sprite": "",
  "glyphs": "https://protomaps.github.io/basemaps-assets/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "protomaps": {
      "type": "vector",
      "url": "pmtiles://https://your-domain.com/espresso.pmtiles"
    }
  },
  "layers": [
    { "id": "background", "type": "background", "paint": { "background-color": "#0B0B0B" } },

    { "id": "land", "type": "fill", "source": "protomaps", "source-layer": "land",
      "paint": { "fill-color": "#111111" } },

    { "id": "water", "type": "fill", "source": "protomaps", "source-layer": "water",
      "paint": { "fill-color": "#0E2A36" } },

    { "id": "landuse", "type": "fill", "source": "protomaps", "source-layer": "landuse",
      "paint": { "fill-color": "#151515", "fill-opacity": 0.6 } },

    { "id": "roads-secondary", "type": "line", "source": "protomaps", "source-layer": "roads",
      "filter": ["==", ["get", "pmap:kind"], "minor_road"],
      "paint": { "line-color": "#2A2A2A", "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.2, 14, 1.5] } },

    { "id": "roads-primary", "type": "line", "source": "protomaps", "source-layer": "roads",
      "filter": ["in", ["get", "pmap:kind"], ["literal", ["major_road", "highway"]]],
      "paint": { "line-color": "#FFFFFF", "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.6, 14, 3] } },

    { "id": "buildings", "type": "fill", "source": "protomaps", "source-layer": "buildings",
      "paint": { "fill-color": "#1B1B1B" } },

    { "id": "places", "type": "symbol", "source": "protomaps", "source-layer": "places",
      "layout": {
        "text-field": ["get", "name"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 10, 12, 16],
        "text-font": ["Noto Sans Regular"]
      },
      "paint": {
        "text-color": "#F6F6F6",
        "text-halo-color": "#0B0B0B",
        "text-halo-width": 1.0
      }
    }
  ]
}

