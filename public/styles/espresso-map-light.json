{
  "version": 8,
  "name": "Espresso Light",
  "glyphs": "https://protomaps.github.io/basemaps-assets/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "protomaps": {
      "type": "vector",
      "url": "pmtiles://https://your-domain.com/espresso.pmtiles"
    }
  },
  "layers": [
    { "id": "background", "type": "background", "paint": { "background-color": "#FCEBDE" } },
    { "id": "land", "type": "fill", "source": "protomaps", "source-layer": "land", "paint": { "fill-color": "#FCEBDE" } },
    { "id": "water", "type": "fill", "source": "protomaps", "source-layer": "water", "paint": { "fill-color": "#D0E8F4" } },
    { "id": "landuse", "type": "fill", "source": "protomaps", "source-layer": "landuse", "paint": { "fill-color": "#F5E3D6", "fill-opacity": 0.7 } },
    { "id": "buildings", "type": "fill", "source": "protomaps", "source-layer": "buildings", "paint": { "fill-color": "#FFFFFF", "fill-outline-color": "#E8CBB3" } },
    { "id": "roads-secondary", "type": "line", "source": "protomaps", "source-layer": "roads", "filter": ["==", ["get", "pmap:kind"], "minor_road"], "paint": { "line-color": "#DE9E67", "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.2, 14, 1.5] } },
    { "id": "roads-primary", "type": "line", "source": "protomaps", "source-layer": "roads", "filter": ["in", ["get", "pmap:kind"], ["literal", ["major_road", "highway"]]], "paint": { "line-color": "#B67237", "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.6, 14, 3] } },
    { "id": "boundaries", "type": "line", "source": "protomaps", "source-layer": "boundaries", "paint": { "line-color": "#E8CBB3", "line-width": 1 } },
    { "id": "place-labels", "type": "symbol", "source": "protomaps", "source-layer": "places", "layout": { "text-field": ["get", "name"], "text-size": ["interpolate", ["linear"], ["zoom"], 5, 10, 12, 16], "text-font": ["Noto Sans Regular"] }, "paint": { "text-color": "#130401", "text-halo-color": "#FFFFFF", "text-halo-width": 1 } }
  ]
}

